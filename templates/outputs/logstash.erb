  logstash:
    hosts: <%= @hosts.to_json %>
    index: <%= @index %>
    worker: <%= @worker %>
    loadbalance: <%= @loadbalance %>
<%- if @enable_tls -%>
    tls:
      certificate_authorities: [ "<%= @tls_ca %>" ]
      certificate: "<%= @tls_cert %>"
      certificate_key: "<%= @tls_key %>"
<%- end -%>
